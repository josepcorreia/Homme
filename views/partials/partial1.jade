div#container
	div.nav_devices
		div.panel.panel-default
			div.panel-heading
				h3.panel-title Choose a Device 
			div.panel-body
				div.panel-body
					ul.nav.nav-pills.nav-stacked
						li 
							a(ng-href="")(ng-repeat="device in devices")(ng-click="selectdev(device)") {{ device.type}}
			
				div.nav_newdevice
					button.btn.btn-primary.btn-lg(type='button')(ng-click="selectnewdev()")  New Device
	div.dev
		div.panel.panel-default
				div.panel-heading
					h3.panel-title(ng-model="devTitle")  {{devTitle}}
				div.panel-body
					div.panel-body(ng-switch on="selection")
						div.device(ng-switch-when="device") 
							form(role='form')(name="deviceform")
								div.form-group(name="inputID")
									label(for='exampleInputText') ID of device
									input.form-control(type='text')(ng-model="deviceID")(ng-disabled="true")	
								div.form-group
									label Select type of device
									select.form-control
										option TV
										option Heater
										option Illumination
										option Other
								div.form-group
									label Select status of device
									select.form-control(ng-model="statusSelected")(ng-options="s.status for s in statusOptions")(ng-change="updateStatus()")
										option ON
										option OFF
								div.form-group	
									label Location of device
									select.form-control(ng-model="roomSelected")(ng-options="r.room for r in roomOptions")
								button.btn.btn-default(type='submit') Edit

						div.newdevice(ng-switch-when="newdevice") 
							form(role='form')
								div.form-group
									label Select type of device
									select.form-control
										option TV
										option Heater
										option Illumination
										option Other
								div.form-group
									label Select status of device
									select.form-control
										option ON
										option OFF

								div.form-group	
									label(for='exampleInputText') Location of device
									input.form-control(type='text')(placeholder="Location of device, e.g Manu's Bedroom ")
								button.btn.btn-default(type='submit')(ng-click="selectnewdev()") Create
